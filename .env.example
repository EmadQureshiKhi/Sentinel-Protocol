# ===========================================
# Liquidation Shield + MEV Armor
# Environment Configuration
# ===========================================

# Network: 'devnet' or 'mainnet'
NETWORK=devnet

# ===========================================
# Solana RPC
# ===========================================
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_MAINNET_RPC=https://api.mainnet-beta.solana.com

# ===========================================
# Helius Geyser (Real-time monitoring)
# Get your API key at: https://dev.helius.xyz/
# ===========================================
HELIUS_API_KEY=your_helius_api_key_here
HELIUS_GEYSER_URL=wss://atlas-devnet.helius-rpc.com

# ===========================================
# Wallet Configuration
# Use a test wallet on devnet - NEVER use mainnet keys in dev
# Format: JSON array of numbers [1,2,3,...]
# ===========================================
WALLET_PRIVATE_KEY=[1,2,3,4,5]

# ===========================================
# Jito Bundle API
# ===========================================
JITO_BUNDLE_URL=https://ny.devnet.block-engine.jito.wtf/api/v1/bundles
JITO_MAINNET_URL=https://ny.mainnet.block-engine.jito.wtf/api/v1/bundles

# ===========================================
# Jupiter API
# ===========================================
JUPITER_API_URL=https://api.jup.ag

# ===========================================
# Database (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/liquidation_shield

# ===========================================
# Redis (Caching)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# API Server
# ===========================================
PORT=3001
CORS_ORIGIN=http://localhost:5173

# ===========================================
# Frontend
# ===========================================
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
VITE_SOLANA_RPC_URL=https://api.devnet.solana.com
VITE_NETWORK=devnet
